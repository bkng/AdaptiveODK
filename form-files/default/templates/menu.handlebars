	<form>
		{{> labelHint}}
				<div class="menu">
					<div class="menu-title"><a href="{{promptLink 7}}">Patient: {{title}}</a></div>
				{{#each choices}}
					<div class="menu-button">
						<div class="menu-left">
							<span class="menu-text">{{label}}</span>
							<span class="menu-subtext">{{display_subtext}}</span>
						</div>
						<div class="menu-right">
							<span class="menu-text {{display_r_label_style}}">{{display_r_label}}</span>
							<span class="menu-subtext {{display_r_subtext_style}}">{{display_r_subtext}}</span>
						</div>
						<div class="clear-div"></div>
						{{! 'menu-target' must be the last div in menu-button}}
					 </div>
					<div class="menu-target" style="display: none;">{{parent_label}}</div>
				{{/each}}
				</div><!-- /menu-grid --> 	
	</form>
		<div style="clear:both;"></div>
